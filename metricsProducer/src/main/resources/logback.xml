<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %5p [%X{traceId:-},%X{spanId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE" />
    </appender>

    <timestamp key="byStartDate" datePattern="yyyy-MM-dd"/>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/logs_${byStartDate}.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{dd.MM.yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
        <smtpHost>${mail.host}</smtpHost>
        <smtpPort>587</smtpPort>
        <STARTTLS>true</STARTTLS>
        <asynchronousSending>false</asynchronousSending>
        <username>${mail.username}</username>
        <password>${mail.password}</password>
        <to>${mail.username}</to>
        <to>gorchanyk@gmail.com</to>
        <from>${mail.username}</from>
        <subject>PRODUCER-KAFKA: %logger{20} - %msg</subject>
        <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
    </appender>

    <root level="info">
        <appender-ref ref="ASYNC"/>
    </root>

    <logger name="t1.gorchanyuk.metricsproducer" level="INFO" additivity="true">
        <appender-ref ref="ASYNC"/>
    </logger>

    <logger name="t1.gorchanyuk" level="WARN" additivity="true">
        <appender-ref ref="EMAIL"/>
        <appender-ref ref="FILE"/>
    </logger>

</configuration>